{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/upload-metadata",
      "destination": "/api/upload-metadata.js"
    },
    {
      "source": "/api/verify-payment",
      "destination": "/api/verify-payment.js"
    },
    {
      "source": "/api/create-token",
      "destination": "/api/create-token.js"
    },
    {
      "source": "/api/get-balance",
      "destination": "/api/get-balance.js"
    },
    {
      "source": "/api/get-blockhash",
      "destination": "/api/get-blockhash.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://galaxy-launch.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ],
  "functions": {
    "api/upload-metadata.js": {
      "maxDuration": 30
    },
    "api/verify-payment.js": {
      "maxDuration": 60
    },
    "api/create-token.js": {
      "maxDuration": 120
    },
    "api/get-balance.js": {
      "maxDuration": 15
    },
    "api/get-blockhash.js": {
      "maxDuration": 15
    }
  }
}Content-Type, Authorization"
        }
      ]
    }
  ],
  "functions": {
    "api/upload-metadata.js": {
      "maxDuration": 30
    },
    "api/verify-payment.js": {
      "maxDuration": 60
    },
    "api/create-token.js": {
      "maxDuration": 120
    }
  }
}
